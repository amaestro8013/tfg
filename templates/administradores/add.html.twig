{% extends 'base.html.twig' %}

{% block title %}Nuevo administrador{% endblock %}

{% block body %}

<style>

.recuadro-full{
    width: 100%;
    height: 75px;
    padding: 20px 0px 10px 0px;
    background-color: white;
    text-align: center;
    color: black;
    border: solid 1px #ccc;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    align-items: center;
    align-content: center;
}
.recuadro-full:hover {
    border: solid 1px #777;
    color: black;
}

</style>

<div class="container">
    <div class="row">
        <a href="/gestion-administradores"  class="recuadro-full">
            <p><b>Gestionar Administradores</b></p>  
        </a>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md">
            <h4>Registrar nuevo Administrador</h4>

            <form id="formRegisAdmin" name="formRegisAdmin" method="POST" action="{{ path ('add-administrador') }}">
                
                <label for="email">Email</label>
                <div class="espacio"></div>
                <input class="rellenar" type="email" id="mail" name="mail"  required />
                <div class="espacio2"></div>
                <label for="passwor">Contrase√±a</label>
                <div class="espacio"></div>
                <input class="rellenar" type="password" id="passwor" name="passwor" required />
                <div class="espacio2"></div>
                <input class="btn btn-light" type="submit" id="enviar" name="submit" />
                

            </form>
        </div>
    </div>
</div>


{% endblock %}  